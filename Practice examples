2) 
let a=prompt("Enter the day?")
switch(a){
  case "monday":
  case "tuesday":
  case "wednesday":
  case "thursday":
  case "friday":
  document.write("weekdays")
  break;
  case "saturday":
  case "sunday":
  document.write("weekends")
  break;
  default:
  document.write("invalid day")
}




