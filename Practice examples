 4)  let a = parseInt(prompt("Enter the number"));
if(a==1 ||a==2  ){
    document.write("IT is a prime number")
}else{
    for(let i=2;i<a;i++){
        if(a%i!=0){
            document.write("The number is a prime number");
            break;
        }else{
            document.write("the number is not a prime number");
            break;
        }
    }
